<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Version>7.1.2</Version>
    <Authors>Osama Al-Rashed</Authors>
    <Company>None</Company>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <Description>Package for manage refresh token with EF core</Description>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>Refresh_Package.png</PackageIcon>
    <ApplicationIcon>Refresh_Package.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Refresh_Package.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Refresh_Package.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
